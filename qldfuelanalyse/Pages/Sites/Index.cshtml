@page
@model qldfuelanalyse.Pages.Sites.IndexModel

@{
    ViewData["Title"] = "Sites";
}

<h1>Index</h1>
<form>
    <p>
        Site Name:
        <input type="text" asp-for="Search" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">

    <thead>
        <tr>
            <th>
                <a asp-page="/Sites/index" asp-route-sortby="1" asp-route-search="@Model.Search">
                    @Html.DisplayNameFor(model => model.SitesObj.Sites.First().SiteName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SitesObj.Sites.First().SiteBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SitesObj.Sites.First().SiteSuburb)
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SitesObj.Sites)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteBrand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteSuburb)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.SiteId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{int PerPage = 10;}
@{int PageNum = int.Parse(Model.PageNum);}
@*this doesn't look very good*@
@{int TotalPages = (int)Math.Ceiling((double)Model.SitesObj.QueryInfo.RowCount / (double)PerPage);}
<nav>
    <ul class="pagination">
        @if (PageNum > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Sites/index" asp-route-PageNum="@(PageNum - 1 )" asp-route-search="@Model.Search" asp-route-sortby="@Model.SortBy">Previous Page</a>
            </li>
        }

        @if (PageNum < TotalPages)
        {
    <li class="page-item">
        <a class="page-link" asp-page="/Sites/index" asp-route-PageNum="@(PageNum + 1 )" asp-route-search="@Model.Search" asp-route-sortby="@Model.SortBy">Next Page</a>
    </li>
                }
        </ul>
</nav>